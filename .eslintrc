{
    "extends": "airbnb-base",
    "rules": {
        "max-depth": ["warn", {
            "max": 3
        }],
        "indent": ["warn", 4],
        "max-len": "off",
        "strict": "off",
        "comma-dangle": ["error", "never"],
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "import/newline-after-import": ["error", {
            "count": 0
        }],
        "no-unused-vars": ["error", {
            "args": "none",
            "caughtErrors": "all"
        }],
        "no-param-reassign": ["error", {
            "props": false
        }],
        "no-underscore-dangle": ["error", {
            "allow": ["_id", "_message"]
        }],
        "require-yield": 0,
        "object-curly-newline": ["error", {
            "minProperties": 5,
            "consistent": true
        }]
    }
}
